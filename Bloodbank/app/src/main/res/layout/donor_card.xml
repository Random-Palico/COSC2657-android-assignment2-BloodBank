<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/border_card"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/donorImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_placeholder"
        android:contentDescription="Donor Picture"
        android:background="@drawable/circle_shape"
        android:clipToOutline="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/donorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/donorAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 years-old"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/donorLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City, Country"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/donorBloodUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Units: 2"
            android:textSize="14sp"
            android:textColor="@color/gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/donorBloodType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/border_card"
        android:text="O+"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:textStyle="bold" />
</LinearLayout>
